<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="operation_support_project_view_form" model="ir.ui.view"
        <field name="name">operation.support.project.form</field>
        <field name="name">operation.support.project</field>
        <field name="arch" type="xml">
            <form>
                <header>

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="project_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_description"/>
                        </group>
                        <group>
                            <field name="project_customer"/>
                            <field name="project_date_availability"/>
                            <field name="project_date_expired"/>
                        </group>                        
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="operation_support_project_view_tree" model="ir.ui.view">
        <field name="name">operation.support.project.tree</field>
        <field name="model">operation.support.project</field>
        <field name="arch" type="xml">
            <tree string="Properties" decoration-success="state in ('offer_received', 'offer_accepted')" decoration-muted="state == 'sold'" decoration-bf="state == 'offer_accepted'">
                <field name="project_name"/>
                <field name="project_description"/>
                <field name="project_customer"/>
                <field name="project_date_availability"/>
                <field name="project_date_expired"/>
            </tree>
        </field>
    </record>
    <record id="operation_support_project_action" model=="ir.actions.act_window">
        <field name="project_name">Project Name</field>
        <field name="res_model">operation.support.project</field>
        <field name="view_mode">tree,form</field>        
    </record>
</odoo>