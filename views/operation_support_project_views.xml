<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="operation_support_project_view_form" model="ir.ui.view">
        <field name="name">operation.support.project.form</field>
        <field name="model">operation.support.project</field>
        <field name="arch" type="xml">
            <form>
<!--
                <header>
                    <button name="action_sold" type="object" string="Sold" states="new,offer_received"/>
                    <button name="action_sold" type="object" string="Sold" states="offer_accepted" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Cancel" states="new,offer_received,offer_accepted"/>
                </header>
-->
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="project_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_description"/>
                        </group>
                        <group>
                            <field name="project_customer"/>
                            <field name="project_date_availability"/>
                            <field name="project_date_expired"/>
                        </group>                        
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="operation_support_project_view_tree" model="ir.ui.view">
        <field name="name">operation.support.project.tree</field>
        <field name="model">operation.support.project</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="project_name"/>
                <field name="project_description"/>
                <field name="project_customer"/>
                <field name="project_date_availability"/>
                <field name="project_date_expired"/>
            </tree>
        </field>
    </record>
    <record id="operation_support_project_action" model="ir.actions.act_window">
        <field name="name">Project list</field>
        <field name="res_model">operation.support.project</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a project start
            </p>
        </field>     
    </record>
</odoo>